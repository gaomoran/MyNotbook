<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/http"
    android:background="#00000000"
    >

    <Button
    android:background="@drawable/ic_diary_bar_happy"
    android:id="@+id/ppw_mood_happy"
    android:layout_width="30dp"
    android:layout_height="30dp" />

    <Button
        android:background="@drawable/ic_diary_bar_commonly"
        android:id="@+id/ppw_mood_commonly"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ppw_mood_bad"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/ic_diary_bar_bad"
        android:id="@+id/ppw_mood_bad"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ppw_mood_happy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
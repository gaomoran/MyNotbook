<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/rich_edit_audio_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/img_rich_audio_play_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/audio_play"
            android:scaleType="centerCrop" />

        <com.mrg.mynotbook.widget.DataAudioView
            android:id="@+id/rich_edit_audio_audioView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/img_rich_audio_play_background"
            android:layout_alignEnd="@+id/img_rich_audio_play_background"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/img_rich_audio_play_background"
            android:gravity="center"
            android:text="111"
            android:textColor="#ffffff"
            android:textSize="17dp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
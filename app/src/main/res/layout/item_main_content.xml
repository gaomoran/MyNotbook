<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"

    >


    <com.mrg.mynotbook.widget.MainItemRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:descendantFocusability="beforeDescendants">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_content"

            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_margin="15dp"

            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_main_cv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/diary_bg_one"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_type_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="类型图片"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"


                android:text="标题"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/tv_go_ico"
                android:layout_toStartOf="@+id/tv_go_ico" />


        </android.support.v7.widget.CardView>
    </com.mrg.mynotbook.widget.MainItemRelativeLayout>

    <!--以下为滑动后显示部分-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_main_edit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#c7c2c2"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView

            android:id="@+id/tv_main_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dc3a3a"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>